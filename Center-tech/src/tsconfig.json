{ 
    "compilerOptions": {
        "target": "ES2020",
        "lib": [ "ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": { "@/*": ["src/*"] }
    },
    "include": ["src", "vite-env.d.ts" ] 
}